# Set default behavior to automatically normalize line endings
* text=auto

# Python files should use LF
*.py text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Frontend files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
