# =============================================================================
# Ebenezer Tax Services CRM - Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_NAME=ebenezer_crm
DB_USER=ebenezer
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# -----------------------------------------------------------------------------
# Security Keys (REQUIRED - Generate unique values!)
# -----------------------------------------------------------------------------
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_ME_GENERATE_A_RANDOM_SECRET_KEY

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SIGNING_KEY=CHANGE_ME_GENERATE_A_RANDOM_JWT_KEY

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=CHANGE_ME_GENERATE_FERNET_KEY

# Generate with: python -c "import secrets, base64; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
DOCUMENT_ENCRYPTION_KEY=CHANGE_ME_GENERATE_32_BYTE_KEY

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
ALLOWED_HOSTS=ebenezertaxservices1.od2.ejsupportit.com,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://ebenezertaxservices1.od2.ejsupportit.com
CSRF_TRUSTED_ORIGINS=https://ebenezertaxservices1.od2.ejsupportit.com

